<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2" version="2.3">

<Tour>
  <Playlist>

    <SoundCue>
      <href>backgroundmusic.mp3</href>    <!-- 15 second audio clip -->
    </SoundCue>

    <FlyTo>
      <duration>5</duration>
      <flyToMode>bounce</flyToMode>
      <LookAt>
        <longitude>-79.387</longitude>
        <latitude>43.643</latitude>
        <altitude>0</altitude>
        <heading>-172.3</heading>
        <tilt>10</tilt>
        <range>1200</range>
        <altitudeMode>relativeToGround</altitudeMode>
      </LookAt>
    </FlyTo>

    <SoundCue>
      <href>cntowerfacts.mp3</href>    <!-- 10 second audio clip -->
      <delayedStart>1.5</delayedStart>
    </SoundCue>

    <Wait>
      <duration>10</duration>    <!-- continues the tour for 10 seconds -->
    </Wait>                         <!-- while audio clip plays -->

  </Playlist>
</Tour>
</kml>
